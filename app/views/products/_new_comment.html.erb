<div class="container"id="add_review" > 
  <% if signed_in? %> 
    <h4>Add a review:</h4> 
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %> 
    <div class="row"> 
      <div class="col-md-6 col-md-4 text-left"> 
        <p> 
          <!--<%= f.label :body, "Comments" %><br>--> 
          <%= f.text_area :body, rows: '3', class: 'form-control', placeholder: 'Please write your review here.' %> 
        </p> 
        <p> 
          <div class="rating"></div> 
        </p> 
        <p> 
          <%= f.submit "Submit", class:"btn btn-primary" %> 
        </p> 
      </div><!--END col-xs-6 col-md-4--> 
    </div><!--END row--> 
  <% end %> 
  <% end %> 
</div><!--END container-->