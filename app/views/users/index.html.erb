<div class="container">
  <div class="table-responsive">
    <h1>Listing Users</h1>
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><button type="button" class="btn btn-default"><%= link_to 'Show', user %></button>
            </td>
            <td><button type="button" class="btn btn-default"><%= link_to 'Edit', edit_user_path(user) %></button>
            </td>
            <td><button type="button" class="btn btn-default"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div><!--END table-responsive-->
  <br>
  <button type="button" class="btn btn-default"><%= link_to 'New User', new_user_path %></button>
</div><!--END container-->